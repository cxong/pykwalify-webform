{% extends "form_group.jinja2" %}
{% block control %}
<input
  type="text"
  {% if not schema.get("unique") %}data-allow-duplicates{% endif %}
  id="{{ path }}"
  name="{{ path }}:csv"
  class="form-control tagsinput"
  {{ "required" if required else "" }}
  placeholder="Comma to add another"
/>
{% endblock %}